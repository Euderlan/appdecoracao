<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decoração AR"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha um modelo para visualizar"
        android:textSize="16sp"
        android:textColor="#CCCCCC"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Container de Botões -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="16dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center">

        <!-- Pinheiro de Natal -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPinheiro"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text=" Pinheiro de Natal"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/button_pinheiro"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- Árvore Parabólica -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnArvore"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text=" Árvore Parabólica"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/button_arvore"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- Decoração -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDecoracao"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text=" Decoração"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/button_decoracao"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>